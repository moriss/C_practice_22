//print a block of hashes, asking the user for the size. Re-ask, if they entered an invalid number.
int main(void)
{
    int ask;
    do
    {
        ask = get_int("How large do you want the block to be? :");
    }
    while (ask < 1);

        for(int i = 0; i < ask; i ++)//Outer loop that runs while i is less or equal to 3
        {
            for(int j = 0; j < ask; j ++)//Inner loop that prints the lines, again less or equal to 3
            {
                printf("# ");//Printing the hashes
            }
                printf("\n");//Line break occurs at end of last hash.
        }
}



void my(int a);
//make your own function out of above and call it in main
int main(void)
{
    int ask;
    do{
        ask = get_int("How large do you want the block to be? :");
    }
    while (ask < 1);
    my(ask);
}

void my(int a)
{
    for(int i = 0; i < a; i ++)//Outer loop that runs while i is less or equal to 3
    {

        for(int j = 0; j < a; j ++)//Inner loop that prints the lines, again less or equal to 3
        {
            printf("# ");//Printing the hashes
        }
            printf("\n");//Line break occurs at end of last hash.
    }
}
