This modifies all relevant code from Initial Exercises to create your own functions, starting with void inputs and void outputs

Contents: const, Parity, Agree, Meeaow, 


//Use const within your own function.
int const A = 6;
void my(void);

int main(void)
{
    my();
}
void my(void)
{

    int num = get_int("Choose a number");
    int num2 = get_int("Choose another number");

    int z = A + num;
    int y = A + num2;
    printf(" %i \n %i ", z , y);
}
//###


//Parity: Test if user's number is odd or even.
void my(void);

int main(void)
{
    my();
}
void my(void)
{
    int num = get_int("Choose a random number ");
    if(num % 2 == 0)
    {
        printf("Your number (%i) is even\n ", num);
    }
    else
    {
        printf("Your number (%i) is odd\n ", num);
    }
}
//###


//Create a function that asks the user to agree or disagree
void my(void);
int main(void)
{
    my();
}
void my(void)
{
    char agree = get_char("Do you think trump will win? ");
    if (agree == 'y' || agree == 'Y')
    {
        printf("You are a trump supporter \n");
    }
    else
    {
        printf("You don't support trump \n");
    }
}
//###

  
 //Print Meeaow 3 times with a while loop using your own function
void my(void);

int main(void)
{
    my();
}


void my(void)
{
    int a = 0;
    while (a < 3)
    {
        printf("meeaow \n");
        a ++;
        //
    }
}

  //###
  
//Print meeaow 3 times using a for loop
void my(void);//AKA Top Level Declarer

int main(void)
{
    my();
}


void my(void)
{
    for(int i = 0; i < 3; i ++)
    {
        printf("Meeaow \n");
    }
}
